.topic class="#{unless collaboration.is_topic? then " answer" end}" id="collaboration-#{collaboration.id}" data-id="#{collaboration.id}"
  .collaboration-body
    header
      .avatar= link_to image_tag(collaboration.user.avatar), user_path(collaboration.user)
      .user= link_to collaboration.user.name, collaboration.user
      span.time_ago = "Publicado h√° #{time_ago_in_words(collaboration.updated_at)}"
    .share
      .fb-like data-href="#{collaboration_url(collaboration)}" data-send="false" data-layout="button_count" data-width="150" data-show-faces="true" data-font="lucida grande"
      a.twitter-share-button href="https://twitter.com/share" data-url="#{collaboration_url(collaboration)}" data-via="#{collaboration.user.name}" data-text="#{truncate(collaboration.description, length: 100, separator: "...")}" Tweet
    
    p= collaboration.description
    
    = link_to 'Responder', collaboration, class: 'answer-bt' unless collaboration.user != current_user || params[:controller] == 'collaborations'

  - if collaboration.is_topic? && params[:controller] != 'collaborations'
    = render partial: "collaborations/collaboration", collection: collaboration.answers