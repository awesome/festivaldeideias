- if not is_signed_in?
  li.login
    a.name[href="#login" rel="facebox"]= t 'login.create_account'
  li.login
    a.name[href="#login" rel="facebox"]= t 'login.do_login'
- else
    li.notifications
      a.globe href="#"
      .count= current_user.new_notifications_count if current_user.new_notifications_count > 0
      .notes
        .content
          h4 Notificações
          ul.notifications
            - current_user.notifications[0..4].each do |n|
              li= n.html_safe
          a.view_more[href="#"]
            | ver todas as notificações

    li.logged_in
      = image_tag current_user.services.first.facebook_avatar, :alt => "Profile image", :title => current_user.name, :class => "thumb_profile_image"
      a.name[href=""]
        = current_user.name
      .user_menu
        .content
          = image_tag current_user.services.first.facebook_avatar, :alt => "Profile image", :title => current_user.name, :class => "medium_profile_image"
          .score
            - ideas = current_user.ideas.where(parent_id: nil)
            - collab = current_user.colaborations
            |#{ideas.size} ideia(s) própria(s), #{collab.size} ideias colaboradas.
          ul
            //li
              a href="" Meu perfil
            li
              a href="/logout/" Sair

