#most_active_ideas
  h1= t('idea.popular.header')
  h2.info= t('idea.popular.about')

  ol.ideas_buckets
    - unless @ideas.nil?
      - @ideas.each_with_index do |idea, pos|
        // TODO: Natalia, fix this list (is it first or last?)
        // TODO: Luiz create Issues/Badges/Categories
        // Badges:
        //  = image_tag "badges/security.png", :alt => "Violência", :title => "Violência"
        //  = image_tag "badges/urban.png", :alt => "Mobilidade Urbana", :title => "Mobilidade Urbana"
        //  = image_tag "badges/disasters.png", :alt => "Catástrofes Naturais", :title => "Catástrofes Naturais"
        //
        li.bucket.first[class=("last" if pos == (@ideas.size - 1))]
          header
            = image_tag "badges/urban.png", :alt => "Mobilidade Urbana", :title => "Mobilidade Urbana"
            h3
              a.idea_title[href=idea_path(idea)]
                = idea.title
            span.idea_user
              = "Iniciada por #{idea.user.name}"
            .clear
          .description
            p.idea_headline
              = idea.headline

          a.button.primary[href=idea_path(idea)]
            |Conheça e contribua
          ul.stats
            li.likes
              = idea.likes
            li.collabs
              = nil
