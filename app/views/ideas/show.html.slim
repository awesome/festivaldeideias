#idea
  .header
    h1= @idea.title
    .category= image_tag @idea.category.badge.url
    .user= t('.user_html', :link => link_to(@idea.user.name, user_path(@idea.user)))
    - if @idea.parent
      .parent= t('.parent_html', :link => link_to(@idea.parent.user.name, idea_path(@idea.parent)))
    .headline
      p= @idea.headline
  .menu
    ul
      li
        a href="#description"
          = t('.menu.description')
      li
        a href="#have"
          = t('.menu.have')
      li
        a href="#need"
          = t('.menu.need')
  .content
    .description
      .text= @idea.document["description"]
      .placeholder= t('.placeholders.description')
      .comments
        = render :partial => 'shared/comments', :locals => { :url => "#{idea_url(@idea)}#description" }
    .have
      .text= @idea.document["have"]
      .placeholder= t('.placeholders.have')
      .comments
        = render :partial => 'shared/comments', :locals => { :url => "#{idea_url(@idea)}#have" }
    .need
      .text= @idea.document["need"]
      .placeholder= t('.placeholders.need')
      .comments
        = render :partial => 'shared/comments', :locals => { :url => "#{idea_url(@idea)}#need" }
= render 'shared/application_js'
